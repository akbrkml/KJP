        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:background="#607D8B"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_message_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data Siswa"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">
            <TextView
                android:id="@+id/title_nisn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_nisn"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nisn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_nisn" />
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">
            <TextView
                android:id="@+id/title_nokk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_no_kk"
                android:textStyle="bold"/>
