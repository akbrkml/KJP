                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_nama_lengkap"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_nama_lengkap" />
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
